#!/bin/sh

. ./clean

mkdir target;

####################################
clang -o target/simsrvTest          \
      -std=c11                       \
                                      \
      simsrvTest.c GLFW/libglfw3.a     \
                                        \
      -lm -lGL -lX11 -lXxf86vm           \
      -lpthread -lXrandr -lXi             \
###########################################

####################################
clang -o target/r2dTest.o           \
      -std=c11                       \
                                      \
      r2dTest.c                        \
                                        \
      -lm -lGL                           \
###########################################

